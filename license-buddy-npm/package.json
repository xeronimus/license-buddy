{
  "name": "license-buddy-npm",
  "version": "0.0.2",
  "description": "License Buddy helps you to stay OS License aware!",
  "bin": "./bin/license-buddy.js",
  "repository": "xeronimus/license-buddy",
  "engines": {
    "node": ">=8"
  },
  "files": [
    "LICENSE",
    "README.md",
    "bin/*.js",
    "src/**/*.js"
  ],
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "prebuild": "npm run format",
    "format": "prettier --single-quote --print-width 120 --arrow-parens always --tab-width 4 --no-bracket-spacing --write '{src/**/*.ts,bin/**/*.ts}'"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^25.1.3",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.2"
  },
  "dependencies": {
    "@types/license-checker": "^25.0.0",
    "@types/node": "^13.7.6",
    "@types/yargs": "^15.0.4",
    "chalk": "^3.0.0",
    "license-checker": "^25.0.1",
    "yargs": "^15.1.0"
  },
  "licenseBuddy": {
    "MIT": {
      "aliases": [],
      "whitelisted": true
    },
    "BSD": {
      "aliases": [
        "BSD-3-Clause",
        "BSD-2-Clause"
      ],
      "aliasesPattern": [
        "BSD-*"
      ],
      "whitelisted": true
    },
    "Apache-2.0": {
      "whitelisted": false
    }
  }
}
